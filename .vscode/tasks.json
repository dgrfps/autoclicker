{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "G++ windows",
			"command": "D:\\mingw64\\bin\\g++.exe",
			"args": [
				"-std=gnu++20",
				"-std=c++20",
				"-w",
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}\\src\\utils\\**.cpp",
				"${workspaceFolder}\\src\\*.cpp",				
				"-o",
				"${workspaceFolder}\\output\\henda.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}\\output\\"
			},
			"problemMatcher": [
				"$gcc"
			],
			"detail": "compiler: g++",
			"group": {
				"kind": "build",
				"isDefault": false
			},
		}
	]
}